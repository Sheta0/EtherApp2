<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Complete Your EtherApp Profile</title>
    <link href="~/images/favicon1.png" rel="icon" type="image/png" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EtherApp.styles.css" asp-append-version="true" />
    <link href="~/css/uikit.min.css" rel="stylesheet" />
    <link href="/css/output.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-b from-[#f0e6f5] to-[#eadbf0] min-h-screen">
    <div id="wrapper" class="flex flex-col min-h-screen">
        <header class="z-[100] h-[--m-top] fixed top-0 left-0 w-full pr-4 flex items-center justify-between bg-white shadow-sm">
            <div class="2xl:w-[--w-side] lg:w-[--w-side-sm]">
                <div class="flex items-center">
                    <div id="logo" class="flex items-center ml-4">
                        <a asp-controller="Home" asp-action="Index" class="flex items-center">
                            <img src="~/images/logo2.png" class="w-40 md:block hidden" alt="logo" />
                        </a>
                    </div>

                </div>

            </div>
            <div class="flex items-center">
                <div class="bg-[#eadbf0] text-[#4a3256] px-4 py-2 rounded-full text-sm font-medium">
                    <span>Setting up your profile</span>
                </div>
            </div>
        </header>

        <div class="mt-[70px] flex-grow py-8 px-4">
            @RenderBody()
        </div>

        <footer class="py-4 text-center">
            <p class="text-sm text-[#8c7c99]">© @DateTime.Now.Year EtherApp - Complete your profile to get started</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/uikit.min.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
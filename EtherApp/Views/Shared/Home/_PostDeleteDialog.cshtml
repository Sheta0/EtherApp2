<div id="postDeleteDialog" uk-modal="">
    <div class="bg-white uk-modal-dialog relative overflow-hidden mx-auto p-6 shadow-sm rounded-xl w-[90%] max-w-[320px] border border-[#cabeca]">
        <!-- Header -->
        <div class="text-center py-3 border-b border-[#cabeca] -mx-6">
            <h2 class="text-xl font-semibold text-[#4a3256]">Delete Post</h2>
            <button type="button" class="button__ico absolute top-1 right-0 p-2 uk-modal-close hover:bg-[#eadbf0] rounded-full">
                <ion-icon name="close-outline" class="text-xl text-[#4a3256]"></ion-icon>
            </button>
        </div>
        <!-- Body -->
        <div class="space-y-3 mt-4">
            <p class="text-sm text-[#4a3256] font-medium">Are you sure you want to delete this post?</p>
        </div>
        <!-- Footer -->
        <div class="flex justify-end mt-6 space-x-3">
            <form id="postDeleteForm" asp-controller="Home" asp-action="PostDelete">
                @Html.AntiForgeryToken()
                <input type="hidden" name="postId" id="deleteDialogPostId" value="" />
            </form>

            <button type="button" class="bg-[#eadbf0] hover:bg-[#d2b9e0] px-4 py-2 rounded-lg text-[#4a3256] uk-modal-close transition-all">
                Cancel
            </button>
            <button type="button" onclick="submitPostDeleteForm()" class="bg-[#4a3256] hover:bg-[#3a015c] px-5 py-2 rounded-lg text-white font-medium transition-all shadow-sm">
                Delete
            </button>
        </div>
    </div>
</div>

@model RegisterVM
<div class="min-h-screen flex">
    <!-- Left Section -->
    <div class="w-full md:w-1/3 bg-gradient-to-r from-[#3A015C] to-[#4A3156] p-8 text-white flex flex-col justify-between rounded-tr-lg rounded-br-lg hidden md:flex">
        <div>
            <div class="text-4xl font-bold mb-4">Welcome</div>
            <div class="text-base opacity-80">Please sign up to use our app</div>
        </div>
        <div class="flex justify-center items-center flex-grow">
            <img src="~/images/logo1.png" alt="ether app" class="w-full">
        </div>
    </div>
    <!-- Right Section -->
    <div class="w-full md:w-2/3 p-8 md:p-16 flex flex-col justify-center !bg-white">
        <div class="max-w-md mx-auto w-full">
            <h1 class="text-4xl !text-[#3A015C] mb-8 font-bold">Sign up Now</h1>
            <form method="post" asp-controller="Authentication" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-2"></div>

                <div class="grid grid-cols-2 gap-4 gap-y-7">
                    <div class="mb-6">
                        <input asp-for="FirstName" placeholder="Enter your First Name" required class="w-full p-4 bg-[#D8D8D8] border border-gray-300 rounded text-[#3A015C] focus:outline-none focus:ring-2 focus:ring-[#4A3156]">
                        <span asp-validation-for="FirstName" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div class="mb-6">
                        <input asp-for="LastName" placeholder="Enter your Last Name" required class="w-full p-4 bg-[#D8D8D8] border border-gray-300 rounded text-[#3A015C] focus:outline-none focus:ring-2 focus:ring-[#4A3156]">
                        <span asp-validation-for="LastName" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <div class="mb-6">
                    <input asp-for="Email" placeholder="Enter your Email" required class="w-full p-4 bg-[#D8D8D8] border border-gray-300 rounded text-[#3A015C] focus:outline-none focus:ring-2 focus:ring-[#4A3156]">
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="grid grid-cols-2 gap-4 gap-y-7">
                    <div class="mb-6 relative">
                        <input asp-for="Password" type="password" placeholder="Enter your password" required class="w-full p-4 bg-[#D8D8D8] border border-gray-300 rounded text-[#3A015C] focus:outline-none focus:ring-2 focus:ring-[#4A3156]">
                        <ion-icon class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer text-[#4A3156] eye-icon" name="eye-outline"></ion-icon>
                        <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div class="mb-6 relative">
                        <input asp-for="ConfirmPassword" id="confirmPassword" name="confirmPassword" type="password" placeholder="Confirm your password" required class="w-full p-4 bg-[#D8D8D8] border border-gray-300 rounded text-[#3A015C] focus:outline-none focus:ring-2 focus:ring-[#4A3156]">
                        <ion-icon class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer text-[#4A3156] eye-icon" name="eye-outline"></ion-icon>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <button type="submit" class="w-full p-4 bg-[#4A3156] text-white rounded mb-4 hover:bg-[#8D6A8E] transition-all ease-in-out">Sign up</button>

                <div class="flex gap-4 mb-6">
                    <a asp-controller="Authentication" asp-action="ExternalLogin" asp-route-provider="Google" class="flex-1 p-3 border border-gray-300 rounded flex items-center justify-center gap-2 bg-white hover:bg-gray-100 transition-all ease-in-out">
                        <ion-icon class="w-8" name="logo-google"></ion-icon>
                        Sign up with Google
                    </a>
                </div>
               
                <div class="text-center">
                    Already have an account? <a class="text-[#4A3156] font-bold hover:text-[#8D6A8E] transition-all ease-in-out"
                                                asp-controller="Authentication" asp-action="Login">Log in</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const eyeIcons = document.querySelectorAll('.eye-icon');
        const passwordInputs = document.querySelectorAll('input[type="password"]');

        eyeIcons.forEach((eyeIcon, index) => {
            eyeIcon.addEventListener('click', function() {
                const type = passwordInputs[index].getAttribute('type');
                passwordInputs[index].setAttribute('type', type === 'password' ? 'text' : 'password');
            });
        });
    });
</script>